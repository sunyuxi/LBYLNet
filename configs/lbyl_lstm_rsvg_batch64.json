{
    "system": {
        "dataset": "rsvg",
        "model": "LBYLNet",
        "language": "lstm",
        "batch_size": 4,
        "anchor_based": true,
        "context": "LandmarkP4",
        "ctx_dim" : 128,
        
        "train_split": "train",
        "val_split": "val",
        "test_split": "testA",
        "val_iter": 1,
        
        "opt_algo": "adam",
        "lr_scheduler": "cosin_lr",
        "warm_up": true,
        "warm_up_epoch": 5,
        "gamma": 0.1,
        "decay_rate": 10,
        "warm_up_from_lr": 0.000001,
        "learning_rate": 0.0001,

        "nb_epoch": 100,
        "print_freq": 100,
        "stepsize": 80,
        "snapshot": 5,
        "chunk_sizes": [32],
        "data_dir": "./data",
        "corpus_dir": "./data/refer/"
    },
    
    "db": {
        "random_color": true,
        "random_flip": true,
        "random_affine": true,
        "input_size": [1024, 1024],
        "output_sizes": [32, 32],

        "vocab_size": 0,
        "word_embedding_size": 512,
        "word_vec_size": 512,
        "hidden_size": 512,
        "bidirectional": true,
        "input_dropout_p": 0.5,
        "dropout_p": 0.2,
        "n_layers": 1,
        "max_query_len": 128,
        "variable_length": true,

        "joint_embedding_size": 256,
        "joint_out_dim": 256,
        "joint_embedding_dropout": 0.1,
        "joint_mlp_layers": 2
    }
}
